<%= form_for user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br><%= f.label :email %>
<%= f.text_field :email %>
<br><%= f.label :password %>
<%= f.text_field :password %>
<br><%= f.label :role %>
<%= f.select :role, User.roles.map { |k,v| [k.humanize, k]} %>
<br><%= f.submit %>
<% end %>