<!DOCTYPE html>
<html>
<head>
  <title>Devise and Pundit Lab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
    <%= link_to("Home", "/") %>
    <%= link_to("Sign in", new_user_session_path) %>
    <%= link_to("Sign up", new_user_registration_path) %>
    <%= link_to("Sign out", destroy_user_session_path, :method => "delete") if user_signed_in?%>
    <%= link_to "About", pages_about_path if !user_signed_in? %>
    <%= link_to "Make a new note", new_note_path if user_signed_in? %>
</nav>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
<h1>Welcome</h1>

<%= yield %>

</body>
</html>
