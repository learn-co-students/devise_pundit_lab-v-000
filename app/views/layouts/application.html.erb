<!DOCTYPE html>
<html>
<head>
  <title>Devise and Pundit Lab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %><br />
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %><br />
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %><br />
<%= link_to "Sign in", user_session_path %><br />
<%= link_to "Sign up", new_user_registration_path %><br />
<%= link_to "Sign out", destroy_user_session_path, method: "delete" %><br />
<%= link_to "Home", root_path %><br />
<%= yield %>

</body>
</html>
